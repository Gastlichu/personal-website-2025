---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import Card from '../../components/ui/Card.astro';
import Badge from '../../components/ui/Badge.astro';

// Get all non-draft blog posts, sorted by date (newest first)
const posts = (await getCollection('blog', ({ data }) => !data.draft))
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

function formatDate(date: Date): string {
  return date.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'short',
    day: 'numeric',
  });
}
---

<Layout title="Blog | Cosmic Ocean" room="blog">
  <div class="min-h-screen px-6 py-24">
    <div class="max-w-3xl mx-auto">
      <!-- Room Title -->
      <header class="mb-16 text-center">
        <h1 class="text-4xl md:text-5xl font-display font-light text-text-primary mb-4">
          <span class="glow-subtle">Blog</span>
        </h1>
        <p class="text-text-secondary font-body">
          Transmissions from the cosmic deep
        </p>
      </header>

      <!-- Posts -->
      <div class="space-y-8">
        {posts.map((post) => (
          <a href={`/blog/${post.slug}`} class="block group">
            <Card interactive class="p-6">
              <div class="flex items-start justify-between gap-4">
                <div class="flex-1">
                  <time class="text-sm text-text-muted font-mono">
                    {formatDate(post.data.date)}
                  </time>
                  <h2 class="mt-2 text-xl font-display text-text-primary group-hover:text-rose transition-colors">
                    {post.data.title}
                  </h2>
                  <p class="mt-3 text-text-secondary font-body leading-relaxed">
                    {post.data.description}
                  </p>
                  {post.data.tags.length > 0 && (
                    <div class="mt-4 flex flex-wrap gap-2">
                      {post.data.tags.map((tag) => (
                        <Badge variant="outline">{tag}</Badge>
                      ))}
                    </div>
                  )}
                </div>
              </div>
            </Card>
          </a>
        ))}
      </div>

      {posts.length === 0 && (
        <p class="text-center text-text-muted">
          No posts yet. The void awaits content.
        </p>
      )}
    </div>
  </div>
</Layout>
