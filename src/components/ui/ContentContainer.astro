---
/**
 * ContentContainer - Text shadow wrapper for improved readability
 * Use this to wrap content that needs better contrast against the breathing background
 * Uses text shadows instead of boxing to maintain the cosmic floating aesthetic
 */

interface Props {
  class?: string;
}

const { class: className = '' } = Astro.props;
---

<div class:list={['text-readable', className]}>
  <slot />
</div>
